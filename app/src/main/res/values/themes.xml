<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Platform.Theme.PlanningPoker" parent="android:Theme.Material.Light" />

    <style name="Base.Theme.PlanningPoker" parent="Platform.Theme.PlanningPoker">
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.PlanningPoker" parent="Base.Theme.PlanningPoker"></style>

    <style name="Theme.PlanningPoker.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.PlanningPoker.Immerse" parent="Theme.PlanningPoker.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">
            @bool/use_light_nav_bar
        </item>
    </style>

    <style name="Theme.PlanningPoker.Home" parent="Theme.PlanningPoker.Immerse">
        <item name="android:windowLightStatusBar">@bool/use_light_status_bar</item>
    </style>
</resources>